generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  EMPLOYEE
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model User {
  id              Int      @id @default(autoincrement())
  user_name       String
  email           String   @unique
  password        String
  role            Role     @default(EMPLOYEE)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  authored_tasks  Task[]   @relation("TaskAuthor")
  completed_tasks Task[]   @relation("TaskCompleter")
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      Status    @default(PENDING)
  finished_at DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  author          User  @relation("TaskAuthor", fields: [author_id], references: [id])
  completed_by    User? @relation("TaskCompleter", fields: [completed_by_id], references: [id])
  author_id       Int
  completed_by_id Int?
}
